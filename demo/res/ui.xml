<x2d version="1.0">
    
    <!-- keep background and title in the root 'objects' namespace -->
    <object n       =   "background"             
        space       =   "camera"
        sprite      =   "graphics.game.background" 
        position    =   "0.5 0.5 1.0"
    />                

    <object n       =   "title"             
        space       =   "camera"
        sprite      =   "graphics.title.background" 
        position    =   "0.5 0.5 1.0"
    />  
    <!-- namespace for fonts -->
    <namespace n = "fonts">
        
        <font    n = "sony_sketch_stroked"
            height = "32"
           spacing = "2 2" 
           texture = "graphics.sony_sketch_stroked" 
            >
            <string n = "characters">
                <![CDATA[ !"#$%&'()*+,-./0123456789:;<=>?@ABCDEFGHIJKLMNOPQRSTUVWXYZ[\]^_`abcdefghijklmnopqrstuvwxyz{|}~]]>
            </string>
            
            <string n = "widths">
                12 12 13 22 19 27 22 11 14 13 16 19 11 14 11 18 20 16 20 19 19 20
                20 20 20 20 11 11 19 19 19 18 24 22 20 19 20 19 19 20 20 12 14 20
                19 24 20 20 20 20 20 19 18 20 22 25 21 21 19 13 17 13 16 20 13 19
                19 17 19 19 14 19 19 11 14 18 12 23 18 19 19 19 14 18 14 19 20 23
                18 19 19 14 15 14 22
            </string>
        </font>
        
        <font    n = "sony_sketch"
            height = "24"
           spacing = "2 2" 
           texture = "graphics.sony_sketch" 
            >
            <string n = "characters">
                <![CDATA[ !"#$%&'()*+,-./0123456789:;<=>?@ABCDEFGHIJKLMNOPQRSTUVWXYZ[\]^_`abcdefghijklmnopqrstuvwxyz{|}~]]>
            </string>
            
            <string n = "widths">
                4 4 5 14 11 19 14 3 6 5 8 11 3 6 3 10 12 8 12 11 11 12 12 12 12 12 
                3 3 11 11 11 10 16 14 12 11 12 11 11 12 12 4 6 12 11 16 12 12 12 12 
                12 11 10 12 14 17 13 13 11 5 9 5 8 12 5 11 11 9 11 11 6 11 11 3 6 
                10 4 15 10 11 11 11 6 10 6 11 12 15 10 11 11 6 7 6 14
            </string>
        </font>     
        
    </namespace>
    <!-- end: fonts -->
    
    <!-- namespace for ui objects -->
    <namespace n = "ui">
        
        <!-- HUD is same size as our camera's frustum -->
        <object n       =   "hud"
               space    =   "camera"
            position    =   "0.5 0.5"
        />

        <object n       =   "fuel_bar"
              parent    =   "hud" 
        parent_space    =   "position"
            position    =   "0.95 0.82 0.0"
              sprite    =   "graphics.all.empty_fuel_bar"
                 box    =   "14 150"
        />         

        <object n       =   "fuel_bar_filling"
              parent    =   "fuel_bar"
            position    =   "0.5 0 0.1"
                 box    =   "1 0.7"
             bgcolor    =   "1 0 0 0.2"
               pivot    =   "0.5 0"
        />
        
        <object n       = "win" 
             visible    = "false"
        />
        
        <object n       = "win_label"
              parent    = "win"
                font    = "objects.fonts.sony_sketch_stroked" 
                text    = "You win!" 
               align    = "center"
            position    = "0 20"
        />

        <object n       = "score_holder"
              parent    = "win"
                font    = "objects.fonts.sony_sketch_stroked" 
                text    = "Score: " 
               align    = "center"
            position    = "0 -20"
        />
        
        <object n       = "lose"
             visible    = "false"
                font    = "objects.fonts.sony_sketch_stroked" 
                text    = "You lose!" 
               align    = "center"
        />        

        <!-- velocity meter hud -->
        <object n       = "velocity_meter" 
              parent    = "hud"
            position    = "0.27 0.97"
                 box    = "0.25 0.015"
        />
        
        <object n       = "velocity_meter_label"
              parent    = "velocity_meter"
                font    = "objects.fonts.sony_sketch" 
                text    = "velocity:" 
               align    = "right"
        />        
        
        <object n       = "velocity_meter_icon"
              parent    = "velocity_meter"
              sprite    = "graphics.all.light_red"
            position    = "0.7 0"
        />        

        <!-- orientation meter hud -->
        <object n       = "orientation_meter" 
              parent    = "hud"        
            position    = "0.70 0.97"
                 box    = "0.25 0.015"
        />
        
        <object n       = "orientation_meter_label"
              parent    = "orientation_meter"
                font    = "objects.fonts.sony_sketch" 
                text    = "orientation:" 
               align    = "right"
        />        
        
        <object n       = "orientation_meter_icon"
              parent    = "orientation_meter"
              sprite    = "graphics.all.light_red"
            position    = "0.7 0"
        />        

    </namespace>
    <!-- end: ui -->
    
</x2d>
