<x2d version="1.0">
    
    <!-- engine setup -->
    <camera     n = "camera"
          frustum = "320 480"  
             zoom = "0.5"
         rotation = "90"
    />    

    <viewport   n = "viewport" 
              box = "0 0 320 480" 
           camera = "camera" 
          bgcolor = "0.1 0.1 0.1" 
    />    
    
    <input      n = "input"
    accelerometer = "false"          
            touch = "true" 
    />
    
    <!-- all graphics and animations -->
    <include path = "res/graphics.xml" />
    
    <!-- all spawners -->
    <include path = "res/spawners.xml" />
    
    <!-- all zones and contexts -->
    <include path = "res/zones_contexts.xml" />
    
    <!-- namespace for all objects -->
    <namespace n = "objects">

        <object n       =   "background"             
            space       =   "camera"
            sprite      =   "graphics.bg.background" 
            position    =   "0.5 0.5 1.0"
            rotation    =   "90"
        />                
        
        <object n       =   "player"             
            animation   =   "animations.player" 
        />   
              
        <!-- add all scenary objects -->
        <include path = "res/scenary.xml" />
        
    </namespace>
    <!-- end: objects -->
        
</x2d>
