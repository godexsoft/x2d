<x2d version="1.0">

    <!-- namespace for spawners -->
    <namespace n = "spawners">
        
        <spawner n = "houses">
            
            <list n = "objects">
                objects.scenary.house 
                objects.scenary.cafe
            </list>
            
            <int    n = "wave_size" 
                value = "1" />        
            
            <!-- set delay between waves -->
            <float  n = "wave_delay">
                <random from="0.6" to="1.2" />
            </float>
            
        </spawner>
        
        <spawner n = "small_stuff">
            
            <list n = "objects">
                objects.scenary.lantern 
                objects.scenary.tree
                objects.scenary.fence
            </list>
            
            <int    n = "wave_size" 
                value = "1" />        
            
            <float  n = "wave_delay">
                <random from="0.3" to="1.0" />
            </float>
            
        </spawner>
        
        <spawner n = "clouds">
            
            <list n = "objects">
                objects.scenary.cloud1 
                objects.scenary.cloud2
                objects.scenary.cloud3
            </list>
            
            <int    n = "wave_size" 
                value = "1" />        
            
            <float  n = "wave_delay">
                <random from="0.3" to="1.0" />
            </float>
            
        </spawner>
        
    </namespace>
    <!-- end: spawners -->

</x2d>
