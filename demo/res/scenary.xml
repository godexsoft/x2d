<x2d version="1.0">
    
    <!-- namespace for scenary objects -->
    <namespace n = "scenary">
        
        <!-- land or die -->
        <object n       =   "moon_surface"
            position    =   "0.5 0.05 0.0"
                zone    =   "zones.crash_or_land"
               space    =   "camera"
        /> 
        
        <object n       =   "platform"
               space    =   "camera"
              sprite    =   "graphics.all.platform"
        >
            <vector n = "position">
                <random from = "0.1 0.05" to = "0.9 0.05" />
            </vector>
            
            <float n = "width" value = "80" />
        </object>

        <!-- position is used as offset off the ship in code -->
        <object n       =   "explosion"
              sprite    =   "graphics.all.explosion"
            rotation    =   "90"
            position    =   "0 -10"
           visible      =   "false"
        /> 
        
    </namespace>
    <!-- end: scenary -->
    
</x2d>
