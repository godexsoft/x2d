<x2d version="1.0">
    
    <!-- engine setup -->
    <camera n="camera" frustum="320 480" />    
    <viewport n="viewport" box="0 0 320 480" camera="camera" bgcolor="0.2 0.2 0.6" />    
    <input n="input" accelerometer="false" touch="true" />

    <script n = "inline">
        <![CDATA[            
            function cb()
                x2d.log("event received in inline lua callback listener!")
            end
            
            -- listen locally too
            con = event.listen("test", cb)
            
            -- send the event
            event.send("test")
            
            -- disconnect the callback
            con:disconnect()
        ]]>
    </script>

    <script n = "mega_script" value = "x2d.log('\n\ntest die Hola!\n\n')" />
    <script n = "file" path = "res/scripts/first.lua" />
    
    <listener n = "listener" event = "test_die" script = "mega_script" />
    
    <!-- this object will log to console when created and destroyed -->
    <object n = "test_object"
            box = "100 100"
        bgcolor = "1 1 1 1"
    >
        <script n = "on_create" ref = "file" />
        <script n = "on_destroy">
            event.send("test_die")
        </script>
        
        <float n = "lifetime">
            <random from = "1" to = "3" />
        </float>
    </object>
    
</x2d>
