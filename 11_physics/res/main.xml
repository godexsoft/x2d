<x2d version="1.0">
    
    <!-- engine setup -->
    <camera n="camera" frustum="320 480" />    
    <viewport n="viewport" box="0 0 320 480" camera="camera" bgcolor="0.2 0.2 0.6" />    
    <input n="input" accelerometer="false" touch="true" />

    
    <!-- namespace for all textures and sprites -->
    <namespace n="graphics">
        <texture n="box" path="res/graphics/box.png">
            <sprite n="box"   x="0"   y="0"   w="64" h="64" />
        </texture>
        <texture n="ball" path="res/graphics/ball.png">
            <sprite n="ball"   x="0"   y="0"   w="64" h="64" />
        </texture>
    </namespace> 
    <!-- end: graphics -->
      
    <body     n = "box_body"
        dynamic = "true" >
    
        <part:box n = "box_part"
              solid = "true"
        >
            <float n = "density">
                <random from = "0.1" to = "1.0" />
            </float>
            
            <float n = "restitution">
                <random from = "0.1" to = "0.8" />
            </float>
            
            <float n = "friction">
                <random from = "0.1" to = "0.8" />
            </float>
        </part:box>
    </body>
    
    <body     n = "sphere_body"
        dynamic = "true" >
        
        <part:circle n = "sphere_part"
            solid = "true"
        >
            <float n = "density">
                <random from = "0.1" to = "1.0" />
            </float>
            
            <float n = "restitution">
                <random from = "0.1" to = "0.8" />
            </float>
            
            <float n = "friction">
                <random from = "0.1" to = "0.8" />
            </float>
        </part:circle>
    </body>

    <body     n = "floor_body"
        dynamic = "false" >
        
        <part:box n = "floor_part"
              solid = "true"
            density = "1.0"
        restitution = "0.1"
           friction = "0.5"
        />
    </body>

    <spawner n = "spawner">
        <list n = "objects">
            box_obj
            sphere_obj
        </list>
                
        <int    n = "wave_size"
            value = "1" />
 
        <float  n = "wave_delay"
            value = "0" />
    </spawner>
    
    <object n = "box_obj"       
         body = "box_body"
       sprite = "graphics.box.box"
    >
        <float n = "rotation">
            <random from = "10" to = "90" />
        </float>

        <float n = "scale">
            <random from = "0.1" to = "0.5" />
        </float>
    </object>

    <object n = "sphere_obj"
        body = "sphere_body"
        sprite = "graphics.ball.ball"
    >
        <float n = "scale">
            <random from = "0.1" to = "0.5" />
        </float>
    </object>

    <object n = "floor_obj"        
         body = "floor_body" 
     position = "0 -100"
      bgcolor = "1 0.6 0.6 1"
          box = "250 10" />    

</x2d>
