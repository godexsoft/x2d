<x2d version="1.0">
    
    <!-- engine setup -->
    <camera n="camera" frustum="320 480" />    
    <viewport n="viewport" box="0 0 320 480" camera="camera" bgcolor="0.2 0.2 0.6" />    
    <input n="input" accelerometer="false" touch="true" />

    
    <!-- namespace for all textures and sprites -->
    <namespace n="graphics">
        <texture n="box" path="res/graphics/box.png">
            <sprite n="box"   x="0"   y="0"   w="64" h="64" />
        </texture> 
    </namespace> 
    <!-- end: graphics -->
      
    <body     n = "box_body"
        dynamic = "true" >
    
        <part:box n = "box_part"
              solid = "true"
            density = "1.0"
        restitution = "0.4"
           friction = "0.1"
        />
    </body>

    <body     n = "floor_body"
        dynamic = "false" >
        
        <part:box n = "floor_part"
              solid = "true"
            density = "1.0"
        restitution = "0.1"
           friction = "0.5"
        />
    </body>

    
    <object n = "box_obj"       
      bgcolor = "0.6 0.6 0.6 0.5"
         body = "box_body"
       sprite = "graphics.box.box"
        scale = "0.2"
    >
        <float n = "rotation">
            <random from = "10" to = "90" />
        </float>
    </object>

    <object n = "floor_obj"        
         body = "floor_body" 
     position = "0 -100"
      bgcolor = "1 0.6 0.6 1"
          box = "200 10" />    

</x2d>
