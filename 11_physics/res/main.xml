<x2d version="1.0">
    
    <!-- engine setup -->
    <camera n="camera" frustum="320 480" />    
    <viewport n="viewport" box="0 0 320 480" camera="camera" bgcolor="0.2 0.2 0.6" />    
    <input n="input" accelerometer="false" touch="true" />

    
    <!-- namespace for all textures and sprites -->
    <namespace n="graphics">
        <texture n="box" path="res/graphics/box.png">
            <sprite n="box"   x="0"   y="0"   w="64" h="64" />
        </texture> 
    </namespace> 
    <!-- end: graphics -->
      
    <body     n = "box_body"
        dynamic = "true" >
    
        <part:box n = "box_part"
              solid = "true"
                 bottomLeft = "10 10"
        />
    </body>

    <body     n = "floor_body"
        dynamic = "false" >
        
        <part:box n = "floor_part"
              solid = "true"
         bottomLeft = "200 10"
           topRight = "10 -80"
        />
    </body>

    
    <object n = "box_obj"       
      bgcolor = "0.6 0.6 0.6 0.5"
         body = "box_body"
         size = "10 10"
          box = "10 10"
     rotation = "30" />    

    <object n = "floor_obj"        
         body = "floor_body" 
     position = "0 -100"
      bgcolor = "1 0.6 0.6 1"
         size = "200 10" 
          box = "200 10" />    

    
</x2d>
