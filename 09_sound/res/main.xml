<x2d version="1.0">
    
    <!-- engine setup -->
    <camera n="camera" frustum="320 480" />    
    <viewport n="viewport" box="0 0 320 480" camera="camera" bgcolor="0.2 0.2 0.6" />    
    <input n="input" accelerometer="false" touch="true" />
    
    <!-- namespace for all sounds -->
    <namespace n="sounds">
        
        <music n = "bg"
            path = "res/sound/loop.caf"
            loop = "true"      
          volume = "0.8"
          fadein = "1.0"
         fadeout = "1.0"
        />
        
        <sfx   n = "swoosh"
            path = "res/sound/swoosh.caf"
        >
            <float n = "pitch">
                <random from = "0.3" to = "1.5" />
            </float>
        </sfx>
        
    </namespace> 
    <!-- end: sounds -->
    
</x2d>
