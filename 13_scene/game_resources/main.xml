<x2d version="1.0">
    
    <!-- engine setup -->
    <camera n="camera" frustum="320 480" />
    <viewport n="viewport" box="0 0 640 960" camera="camera" bgcolor="0.0 0.0 0.0" />
    <input n="input" accelerometer="false" touch="true" />

    <namespace n="graphics">
        
        <texture n="first" path="res/graphics/first.png">
            <sprite n = "bg" x="0" y="0" w="320" h="480" />
        </texture>

        <texture n="second" path="res/graphics/second.png">
            <sprite n = "bg" x="0" y="0" w="320" h="480" />
        </texture>
        
    </namespace>
    
    <namespace n="scenes">
    
        <scene n="first">
            <object  n = "background"
                 space = "camera"
                sprite = "graphics.first.bg"
              position = "0.5 0.5 5.0"
            />
        </scene>
    
        <scene n="second">
            <object  n = "background"
                 space = "camera"
                sprite = "graphics.second.bg"
              position = "0.5 0.5 5.0"
            />
        </scene>
        
    </namespace>
    
</x2d>
