<x2d version="1.0">
    
    <!-- engine setup -->
    <camera     n = "camera"
          frustum = "320 480"  
         rotation = "90"
    />    

    <viewport   n = "viewport" 
              box = "0 0 320 480" 
           camera = "camera" 
    />    
    
    <input      n = "input"
    accelerometer = "true"          
            touch = "true" 
    />
    
    <!-- all graphics and animations -->
    <include path = "res/graphics.xml" />
    
    <!-- all zones and contexts -->
    <include path = "res/zones_contexts.xml" />
    
    <!-- namespace for all objects -->
    <namespace n = "objects">

        <object n       =   "title"             
            space       =   "camera"
            sprite      =   "graphics.title.bg" 
            position    =   "0.5 0.5 1.0"
            rotation    =   "90"
        />  

        <object n       =   "bullet"
            sprite      =   "graphics.invaders.bullet"
            contexts    =   "contexts.bullets"
        />

        <spawner n = "bullet_spawner">            
            <list n = "objects">
                objects.bullet
            </list>
            
            <int    n = "wave_size" 
                value = "1" />
            
            <float  n = "wave_delay"
                value = "0" />            
        </spawner>
        
        <!-- the ship -->
        <object n       =   "player"
            sprite      =   "graphics.invaders.ship"
            spawner     =   "bullet_spawner"
        />

        <!-- the enemy -->
        <object n       =   "enemy"
            sprite      =   "graphics.invaders.soldier_3">
        </object>
        
        <spawner n = "enemy_spawner">            
            <list n = "objects">
                objects.enemy
            </list>
            
            <int    n = "wave_size" 
                value = "1" />
            
            <float  n = "wave_delay"
                value = "1" />            
        </spawner>
        
        <object n       =   "invading_space"
            spawner     =   "enemy_spawner"
            position    =   "200 0"
        />
        
    </namespace>
    <!-- end: objects -->
        
    <!-- namespace for settings -->
    <namespace n = "settings">
        
        <float n = "enemy_offset_from">
            <random from = "-200" to = "-100" />
        </float>
        
        <float n = "enemy_offset_to">
            <random from = "200" to = "400" />
        </float>
        
        <float n = "enemy_roundtrip_time">
            <random from = "0.5" to = "3.0" />
        </float>
        
    </namespace>
    <!-- end: settings -->
    
</x2d>
