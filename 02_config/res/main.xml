<x2d version="1.0">
    
    <!-- engine setup -->
    <!-- 
     configure main camera 
     -->
    <camera n="camera" frustum="320 480" />
    
    <!-- 
     configure main viewport to match full screen size and camera's frustum 
     -->
    <viewport n="viewport" camera="camera" box="0 0 320 480" />
    
    <!--
        include a second config
     -->
    <include path="res/other.xml" />
         
</x2d>
