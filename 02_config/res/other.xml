<!-- This file is included from main.xml -->
<x2d version="1.0">
    
    <!-- 
     create a top level element named "txtr" 
     this creates a resource_ptr<texture>.
     -->
	<texture n="txtr" path="res/graphics/scenary.png">
        
        <!-- 
         create a second level element "txtr.cafe" 
         this element uses the parent texture object.
         this creates a resource_ptr<sprite>.
         -->
        <sprite n="cafe" x="0" y="0" w="158" h="140" />
        <sprite n="house" x="0" y="139" w="158" h="216" />
        <sprite n="tree" x="157" y="0" w="53" h="95" />
        <sprite n="lantern" x="157" y="184" w="42" h="172" />
        <sprite n="fence" x="303" y="0" w="60" h="49" />
        <sprite n="cloud1" x="209" y="0" w="93" h="48" />
        <sprite n="cloud2" x="209" y="48" w="93" h="48" />
        <sprite n="cloud3" x="209" y="95" w="93" h="40" />
	</texture> 
    
    <!--
     animation support:
     
    <animation n="anim" duration="0.1">
        <frame n="frame1" duration="0.2" sprite="cloud1" />
        <frame n="frame2" sprite="cloud2" />
        <frame n="frame3" sprite="cloud3" />
    </animation>
     -->
    
    <!-- 
        stand alone sprite with reference to texture object
    <sprite n="test" texture="txtr" x="0" y="0" w="158" h="140" />
     -->
    
    <!-- 
     generict container which just adds "values." as namespace to all children 
     so "flt" becomes "values.flt" etc.     
     -->
    <namespace n="values">
        <!--
         bare values (used as metrics)
         returns bare type: float, int, string etc.
         -->
        <int n="num_sets">
            <random from="1" to="5" />
        </int>

        <!--
         use random generator.
         will return random float in given range every time when read.
         -->
        <float n="x">
            <random from="0.0" to="320.0" />
        </float>
       
        <float n="y">
            <random from="0.0" to="480.0" />
        </float>
        
        <float n="vel">
            <random from="10.0" to="250.0" />
        </float>
    </namespace>
</x2d>